<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jancoyan.mapper.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jancoyan.pojo.Article">
        <id column="article_id" property="articleId" />
        <result column="article_title" property="articleTitle" />
        <result column="article_author_id" property="articleAuthorId" />
        <result column="article_summary" property="articleSummary" />
        <result column="article_is_comment" property="articleIsComment" />
        <result column="article_rank" property="articleRank" />
        <result column="article_edit_time" property="articleEditTime" />
        <result column="article_post_time" property="articlePostTime" />
        <result column="article_view_count" property="articleViewCount" />
        <result column="article_comment_count" property="articleCommentCount" />
        <result column="article_like_count" property="articleLikeCount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        article_id, article_title, article_author_id, article_summary, article_is_comment, article_rank, article_edit_time, article_post_time, article_view_count, article_comment_count, article_like_count
    </sql>
    <select id="selectOrderByArticleViewCount" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tbl_article
        order by article_view_count desc
        limit 10
    </select>
    <select id="selectOrderByArticleLikeCount" resultType="com.jancoyan.pojo.Article">
        select
        <include refid="Base_Column_List"/>
        from tbl_article
        order by article_like_count desc
        limit 10
    </select>
    <select id="selectOrderByArticleCommentCount" resultType="com.jancoyan.pojo.Article">
        select
        <include refid="Base_Column_List"/>
        from tbl_article
        order by article_comment_count desc
        limit 10
    </select>
    <select id="selectByIdWithAuthorName" resultType="com.jancoyan.pojo.Article">
        select
               * from v_article_detail
        where
              article_id = #{articleId}
    </select>
    <select id="selectArticleByType" resultType="com.jancoyan.pojo.Article">

    </select>
    <select id="selectArticleByTagId" resultType="com.jancoyan.pojo.Article">
        select
            ta.article_id,
            ta.article_title,
            ta.article_summary,
            ta.article_post_time,
            ta.article_view_count,
            ta.article_comment_count,
            ta.article_like_count
        from tbl_article ta
                 join tbl_article_tag tat
                      on ta.article_id = tat.article_id and tag_id = #{tagId}
    </select>
    <select id="selectAllWithAuthorNameByPage" resultType="com.jancoyan.pojo.Article">
        select *
            from v_article_detail
        order by article_post_time desc
    </select>

</mapper>
