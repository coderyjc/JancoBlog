<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jancoyan.mapper.TypeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jancoyan.pojo.Type">
        <id column="type_id" property="typeId" />
        <result column="pre_type_id" property="preTypeId" />
        <result column="type_name" property="typeName" />
        <result column="type_description" property="typeDescription" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        type_id, pre_type_id, type_name, type_description
    </sql>
    <select id="getMaxTypeId" resultType="java.lang.Integer">
        select max(type_id) from tbl_type
    </select>

</mapper>
